{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:react-hooks/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react/self-closing-comp": ["error", {
            "component": true,
            "html": false
        }],
        "comma-dangle": ["error", {
            "functions": "never"
        }],
        "react/function-component-definition": ["enabled", {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
        }]
    }
}
